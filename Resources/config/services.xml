<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="symfonyid.admin.event.event_subscriber" class="SymfonyId\AdminBundle\Event\EventSubscriber" >
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="symfonyid.admin.security.authorization_checker" class="SymfonyId\AdminBundle\Security\AuthorizationChecker" >
            <argument type="service" id="translator"/>
            <argument type="string">%symfonyid.admin.translation_domain%</argument>
        </service>
        <service id="symfonian_id.admin.view.view" class="SymfonyId\AdminBundle\View\View" />
        <service id="symfonyid.admin.manager.driver_finder" class="SymfonyId\AdminBundle\Manager\DriverFinder" >
            <argument type="service" id="symfonyid.admin.extractor.extractor_factory"/>
            <argument type="string">%symfonyid.admin.driver%</argument>
        </service>
        <service id="symfonyid.admin.crud.crud_factory" class="SymfonyId\AdminBundle\Crud\CrudFactory" >
            <argument type="service" id="templating.engine.twig"/>
        </service>
        <service id="symfonyid.admin.crud.crud_operation_handler" class="SymfonyId\AdminBundle\Crud\CrudOperationHandler" >
            <argument type="service" id="symfonyid.admin.manager.manager_factory"/>
            <argument type="service" id="symfonyid.admin.event.event_subscriber"/>
        </service>
        <service id="symfonyid.admin.export.data_exporter" class="SymfonyId\AdminBundle\Export\DataExporter" >
            <argument type="service" id="symfonyid.admin.manager.manager_factory"/>
        </service>
    </services>
</container>
