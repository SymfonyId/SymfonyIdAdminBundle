<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="symfonyid.admin.filter.orm.fields" class="SymfonyId\AdminBundle\Doctrine\Filter\FieldsFilter" >
            <argument type="service" id="doctrine.orm.entity_manager" on-invalid="ignore"/>

            <tag name="symfonyid.orm.filter" />
        </service>
        <service id="symfonyid.admin.filter.odm.fields" class="SymfonyId\AdminBundle\Document\Filter\FieldsFilter" >
            <argument type="service" id="doctrine_mongodb.odm.document_manager" on-invalid="ignore"/>

            <tag name="symfonyid.odm.filter" />
        </service>
    </services>
</container>