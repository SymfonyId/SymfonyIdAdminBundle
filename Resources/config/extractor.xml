<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="symfonyid.admin.extractor.extractor_factory" class="SymfonyId\AdminBundle\Extractor\ExtractorFactory" />

        <service id="symfonian_id.admin.extractor.class_extractor" class="SymfonyId\AdminBundle\Extractor\ClassExtractor">
            <argument type="service" id="annotations.cached_reader" />

            <tag name="symfonyid.extractor" />
        </service>

        <service id="symfonian_id.admin.extractor.method_extractor" class="SymfonyId\AdminBundle\Extractor\MethodExtractor">
            <argument type="service" id="annotations.cached_reader" />

            <tag name="symfonyid.extractor" />
        </service>

        <service id="symfonian_id.admin.extractor.property_extractor" class="SymfonyId\AdminBundle\Extractor\PropertyExtractor">
            <argument type="service" id="annotations.cached_reader" />

            <tag name="symfonyid.extractor" />
        </service>
    </services>
</container>
