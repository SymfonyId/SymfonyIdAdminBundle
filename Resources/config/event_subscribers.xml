<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="symfonyid.admin.subscriber.auto_enable_user" class="SymfonyId\AdminBundle\Subscriber\AutoEnableUserSubscriber" >
            <argument>%symfonyid.admin.user.auto_enable%</argument>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="symfonyid.admin.subscriber.controller_annotation_extractor" class="SymfonyId\AdminBundle\Subscriber\CrudControllerAwareSubscriber" >
            <argument type="service" id="kernel" />
            <argument type="service" id="symfonyid.admin.configuration.configuration_mapper" />

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>