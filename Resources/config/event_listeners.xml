        <service id="symfonyid.admin.listener.enable_fields_filter" class="SymfonyId\AdminBundle\EventListener\EnableFieldsFilterListener" >
            <argument type="service" id="symfonyid.admin.manager.manager_factory" />
            <argument type="service" id="symfonyid.admin.extractor.extractor" />
            <argument type="service" id="symfonyid.admin.manager.driver_finder" />
            <argument>%symfonyid.admin.date_time_format%</argument>

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="-127" />
        </service>

        <service id="symfonyid.admin.listener.enable_field_sort_filter" class="SymfonyId\AdminBundle\EventListener\EnableFieldSorterListener" >
            <argument type="service" id="session" />
            <argument type="service" id="symfonyid.admin.manager.driver_finder" />

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="-127"/>
            <tag name="kernel.event_listener" event="symfonyid.filter_query" method="onFilterQuery" />
        </service>

        <service id="symfonyid.admin.listener.enable_soft_delete_filter" class="SymfonyId\AdminBundle\EventListener\EnableSoftDeleteListener" >
            <argument type="service" id="symfonyid.admin.manager.manager_factory" />
            <argument type="service" id="symfonyid.admin.manager.driver_finder" />

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="-127" />
        </service>

        <service id="symfonyid.admin.listener.file_upload" class="SymfonyId\AdminBundle\EventListener\FileUploadListener" >
            <argument type="service" id="symfonyid.admin.upload.upload_handler" />
            <argument>%symfonyid.admin.upload_directory%</argument>

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="-127" />
            <tag name="kernel.event_listener" event="symfonyid.pre_save" method="onPreSave" />
        </service>

        <service id="symfonyid.admin.listener.filter_delete_user" class="SymfonyId\AdminBundle\EventListener\FilterDeleteUserListener" >
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="translator" />
            <argument>%symfonyid.admin.translation_domain%</argument>

            <tag name="kernel.event_listener" event="symfonyid.pre_delete" method="onDeleteUser" priority="-127" />
        </service>

        <service id="symfonyid.admin.listener.profile_controller_configurator" class="SymfonyId\AdminBundle\EventListener\ProfileControllerConfiguratorListener" >
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>
            <call method="setShowFields">
                <argument>%symfonyid.admin.user.profile_fields%</argument>
            </call>
            <call method="setFormClass">
                <argument>%symfonyid.admin.user.password_form%</argument>
            </call>
            <call method="setModelClass">
                <argument>%symfonyid.admin.user.model_class%</argument>
            </call>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>

        <service id="symfonyid.admin.listener.set_default_crud_configuration" class="SymfonyId\AdminBundle\EventListener\SetDefaultCrudConfigurationListener" >
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="255" />
        </service>

        <service id="symfonyid.admin.listener.set_default_grid_configuration" class="SymfonyId\AdminBundle\EventListener\SetDefaultGridConfigurationListener" >
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>
            <call method="setGridFilters">
                <argument>%symfonyid.admin.filters%</argument>
            </call>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="255" />
        </service>

        <service id="symfonyid.admin.listener.set_timestamp" class="SymfonyId\AdminBundle\EventListener\SetTimestampListener" >
            <argument type="service" id="security.token_storage" />

            <tag name="kernel.event_listener" event="symfonyid.pre_save" method="onPreSaveUser" />
        </service>

        <service id="symfonyid.admin.listener.twig_global_variable" class="SymfonyId\AdminBundle\EventListener\TwigGlobalVariableListener" >
            <argument type="service" id="twig" />

            <call method="setTitle">
                <argument>%symfonyid.admin.app_title%</argument>
            </call>
            <call method="setShortTitle">
                <argument>%symfonyid.admin.app_short_title%</argument>
            </call>
            <call method="setDateTimeFormat">
                <argument>%symfonyid.admin.date_time_format%</argument>
            </call>
            <call method="setMenu">
                <argument>%symfonyid.admin.menu.menu_name%</argument>
            </call>
            <call method="setLocale">
                <argument>%locale%</argument>
            </call>
            <call method="setTranslationDomain">
                <argument>%symfonyid.admin.translation_domain%</argument>
            </call>

            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>

        <service id="symfonyid.admin.listener.user_controller_configurator" class="SymfonyId\AdminBundle\EventListener\UserControllerConfiguratorListener" >
            <argument type="service" id="symfonyid.admin.configuration.configuration_mapper" />

            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setConfiguratorFactory">
                <argument type="service" id="symfonyid.admin.configuration.configurator_factory" />
            </call>
            <call method="setCacheHandler">
                <argument type="service" id="symfonyid.admin.cache.cache_handler" />
            </call>
            <call method="setKernel">
                <argument type="service" id="kernel" />
            </call>
            <call method="setFormClass">
                <argument>%symfonyid.admin.user.user_form%</argument>
            </call>
            <call method="setModelClass">
                <argument>%symfonyid.admin.user.model_class%</argument>
            </call>
            <call method="setShowFields">
                <argument>%symfonyid.admin.user.show_fields%</argument>
            </call>
            <call method="setGridColumns">
                <argument>%symfonyid.admin.user.grid_columns%</argument>
            </call>
            <call method="setGridFilters">
                <argument>%symfonyid.admin.user.grid_filters%</argument>
            </call>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>
    </services>
</container>
