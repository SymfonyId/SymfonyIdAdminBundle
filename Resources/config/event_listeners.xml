<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="symfonyid.admin.listener.auto_enable_user" class="SymfonyId\AdminBundle\EventListener\AutoEnableUserListener" >
            <argument>%symfonyid.admin.user.auto_enable%</argument>

            <tag name="kernel.event_listener" event="symfonyid.pre_save" method="onPreSaveUser" />
        </service>
        <service id="symfonyid.admin.listener.controller_annotation_extractor" class="SymfonyId\AdminBundle\EventListener\ControllerAnnotationExtractorListener" >
            <argument type="service" id="kernel" />
            <argument type="service" id="symfonyid.admin.configuration.configuration_mapper" />

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>
    </services>
</container>
