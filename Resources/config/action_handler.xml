<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="symfonian_id.admin.action_handler.bulk_create" class="SymfonyId\AdminBundle\ActionHandler\BulkCreateActionHandler">
            <argument type="service" id="symfonyid.admin.crud.crud_operation_handler" />
            <argument type="service" id="translator"/>
            <argument type="string">%symfonyid.admin.translation_domain%</argument>

            <tag name="symfonyid.crud_action" />
        </service>
        <service id="symfonian_id.admin.action_handler.bulk_delete" class="SymfonyId\AdminBundle\ActionHandler\BulkDeleteActionHandler">
            <argument type="service" id="symfonyid.admin.crud.crud_operation_handler" />
            <argument type="service" id="translator"/>
            <argument type="string">%symfonyid.admin.translation_domain%</argument>

            <tag name="symfonyid.crud_action" />
        </service>
        <service id="symfonian_id.admin.action_handler.create_update" class="SymfonyId\AdminBundle\ActionHandler\CreateUpdateActionHandler">
            <argument type="service" id="symfonyid.admin.crud.crud_operation_handler" />
            <argument type="service" id="translator"/>

            <tag name="symfonyid.crud_action" />
        </service>
        <service id="symfonian_id.admin.action_handler.delete" class="SymfonyId\AdminBundle\ActionHandler\DeleteActionHandler">
            <argument type="service" id="symfonyid.admin.crud.crud_operation_handler" />
            <argument type="service" id="translator"/>
            <argument type="string">%symfonyid.admin.translation_domain%</argument>

            <tag name="symfonyid.crud_action" />
        </service>
        <service id="symfonian_id.admin.action_handler.detail" class="SymfonyId\AdminBundle\ActionHandler\DetailActionHandler">
            <argument type="service" id="session" />
            <argument type="service" id="translator"/>

            <tag name="symfonyid.crud_action" />
        </service>
        <service id="symfonian_id.admin.action_handler.list" class="SymfonyId\AdminBundle\ActionHandler\ListActionHandler">
            <argument type="service" id="symfonyid.admin.crud.crud_operation_handler" />
            <argument type="service" id="symfonyid.admin.export.data_exporter"/>
            <argument type="service" id="translator"/>

            <tag name="symfonyid.crud_action" />
        </service>
    </services>
</container>
