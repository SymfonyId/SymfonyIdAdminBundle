{% spaceless %}
<header class="main-header">
    <!-- Logo -->
    <a href="{{- url('home') -}}" class="logo">
        <span class="logo-mini"><b>{{- short_title -}}</b></span>
        <span class="logo-lg"><b>{{- title -}}</b></span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
            {%- if app.user is defined and app.user is not null -%}
            <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <!-- The user image in the navbar-->
                    <img src="{{- asset(generate_avatar(app.user)) -}}" class="user-image" alt="User Image"/>
                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                    <span class="hidden-xs">
                        {%- if app.user is defined and app.user is not null -%}
                            {%- if app.user.fullName is null -%}
                                {{- app.user.username | ucwords -}}
                            {%- else -%}
                                {{- app.user.fullName | ucwords -}}
                            {%- endif -%}
                        {%- endif -%}
                    </span>
                </a>
                <ul class="dropdown-menu">
                    <!-- The user image in the menu -->
                    <li class="user-header">
                        <img src="{{- asset(generate_avatar(app.user)) -}}" class="img-circle" alt="User Image" />
                        <p>
                            {%- if app.user is defined and app.user is not null -%}
                                {{- app.user.username | upper -}}
                                <small>{{- app.user.role | upper -}}</small>
                            {%- endif -%}
                        </p>
                    </li>
                    <!-- Menu Footer-->
                    <li class="user-footer">
                        <div class="pull-left">
                            <a href="{{- url('symfonian_indonesia_admin_profile_profile') -}}" class="btn btn-default btn-flat">{{- 'link.profile' | trans({}, translation_domain) -}}</a>
                        </div>
                        <div class="pull-right">
                            <a href="{{- url('fos_user_security_logout') -}}" class="btn btn-default btn-flat">{{- 'link.logout' | trans({}, translation_domain) -}}</a>
                        </div>
                    </li>
                </ul>
            </li>
            {%- endif -%}
        </ul>
      </div>
    </nav>
</header>
{% endspaceless %}
